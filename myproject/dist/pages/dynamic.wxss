

.slide-image {
  width: 100%;
  height: 13rem;
  box-shadow: 0px -40px 20px #7a7171 inset;
}

.find {
  display: flex;
  justify-content: center;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 40rpx 20rpx;
}
.photo {
  display: flex;
  align-content: center;
  justify-content: center;
  height: 100px;
  width: 100px;
}

.popularity {
  color: #918d8d;
  margin-top: 6px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30px;
  height: 80rpx;
}

.recPhoto {
  border-radius: 10px;
  width: 9rem;
}

.recName {
  font-size: 20px;
  width: 9rem;
}

.recommend {
  display: flex;
  flex-basis: column;
  justify-content: center;
  align-content: center;
}

.production {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;

}




